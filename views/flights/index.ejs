<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Mongoose Flights</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="header">
        <a href="/flights/new" class="badge badge-secondary">New Flight</a>
        <!-- &nbsp; | &nbsp; -->
        <a href="/flights" class="badge badge-secondary">All Flights</a>
        <h1>All Flights List</h1>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight #</th>
                <th>Departure Date</th>
                <!-- <th>First Class Availability</th> -->
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><a href="/flights/<%= f._id %>">Details</a></td>
                <td>
                    <form action="/flights/<%= f._id %>?_method=DELETE" method="POST">
                        <button class="badge badge-secondary" type="submit">X</button>
                    </form>
                </td>
                <!-- finish the ternary expression to display
                       'Yes' or 'Nope' -->
                <!-- <td><%= f.firstClass ? 'Yes' : 'No' %></td> -->
            </tr>
        <% }); %>
        </tbody>
    </table>
</body>

</html>